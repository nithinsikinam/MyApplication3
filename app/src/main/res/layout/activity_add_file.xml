<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddUrl">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="111dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="9dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Not Selected"
                    android:textColor="@android:color/background_dark"
                    android:textSize="18dp" />

                <Button
                    android:id="@+id/btnSelect1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Select Document" />






            </LinearLayout>


        </LinearLayout>

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="168dp"
            android:layout_marginTop="270dp"
            android:layout_marginEnd="168dp"
            android:layout_marginBottom="72dp"
            app:layout_constraintBottom_toTopOf="@+id/button_submit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RadioButton
                android:id="@+id/radio_one1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:onClick="checkButton1"
                android:text="pdf" />

            <RadioButton
                android:id="@+id/radio_two1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="checkButton1"
                android:text="ppt" />

            <RadioButton
                android:id="@+id/radio_three1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="checkButton1"
                android:text="txt" />

            <RadioButton
                android:id="@+id/radio_four1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="checkButton1"
                android:text="png" />

        </RadioGroup>
        <Button
            android:id="@+id/button_submit1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="169dp"
            android:layout_marginTop="72dp"
            android:layout_marginEnd="152dp"
            android:layout_marginBottom="149dp"
            android:text="Submit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
             />

    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>